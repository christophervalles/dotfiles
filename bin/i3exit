#!/usr/bin/env zsh
lock() {
    i3lock -k --datestr="%a %Y-%m-%d" -c 000000 -B 5 --insidecolor=aaaaaa6c --ringcolor=0000003e --linecolor=00000000 --keyhlcolor=ffffff80 --ringvercolor=00ff0055 --separatorcolor=22222260 --insidevercolor=aaaaaa6c --ringwrongcolor=ff000055 --insidewrongcolor=aaaaaa6c
}

case "$1" in
    lock)
        lock
        ;;
    logout)
        i3-msg exit
        ;;
    suspend)
        lock && systemctl suspend
        ;;
    hibernate)
        lock && systemctl hibernate
        ;;
    reboot)
        systemctl reboot
        ;;
    shutdown)
        systemctl poweroff
        ;;
    *)
        echo "Usage: $0 {lock|logout|suspend|hibernate|reboot|shutdown}"
        exit 2
esac

exit 0
