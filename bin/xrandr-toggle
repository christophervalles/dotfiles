#!/bin/bash
intern=eDP-1
extern=DP-3-2
#extern=HDMI-1

if xrandr | grep "$extern connected (normal"; then
    xrandr --output "$extern" --mode "3440x1440" --primary
    xrandr --output "$intern" --off
else
    xrandr --output "$intern" --auto --primary
    xrandr --output "$extern" --off
fi

exit 0
