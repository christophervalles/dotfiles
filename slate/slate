config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config modalEscapeKey esc
config windowHintsTopLeftX (windowSizeX/2)-(windowHintsWidth/2)
config windowHintsTopLeftY (windowSizeY/2)-(windowHintsHeight/2)

# Throw Bindings
bind 1:f11         throw 0 resize
bind 2:f11         throw 1 resize
bind 3:f11         throw 2 resize

# General aliases
alias sox screenOriginX
alias soy screenOriginY
alias ssx screenSizeX
alias ssy screenSizeY
alias wpx windowTopLeftX
alias wpy windowTopLeftY
alias wsx windowSizeX
alias wsy windowSizeY

# Resize Bindings
bind up:f10:toggle              resize 0 +1 bottom-right
bind down:f10:toggle            resize 0 -1 bottom-right
bind left:f10:toggle            resize +1 0 bottom-right
bind right:f10:toggle           resize -1 0 bottom-right
bind up:shift,f10:toggle        resize 0 +10 bottom-right
bind down:shift,f10:toggle      resize 0 -10 bottom-right
bind left:shift,f10:toggle      resize +10 0 bottom-right
bind right:shift,f10:toggle     resize -10 0 bottom-right
bind up:alt,f10:toggle          resize 0 +100 bottom-right
bind down:alt,f10:toggle        resize 0 -100 bottom-right
bind left:alt,f10:toggle        resize +100 0 bottom-right
bind right:alt,f10:toggle       resize -100 0 bottom-right

bind up:f12:toggle              resize 0 -1 top-left
bind down:f12:toggle            resize 0 +1 top-left
bind left:f12:toggle            resize -1 0 top-left
bind right:f12:toggle           resize +1 0 top-left
bind up:shift,f12:toggle        resize 0 -10 top-left
bind down:shift,f12:toggle      resize 0 +10 top-left
bind left:shift,f12:toggle      resize -10 0 top-left
bind right:shift,f12:toggle     resize +10 0 top-left
bind up:alt,f12:toggle          resize 0 -100 top-left
bind down:alt,f12:toggle        resize 0 +100 top-left
bind left:alt,f12:toggle        resize -100 0 top-left
bind right:alt,f12:toggle       resize +100 0 top-left

bind up:cmd,f10:toggle          push up
bind down:cmd,f10:toggle        push down
bind left:cmd,f10:toggle        push left
bind right:cmd,f10:toggle       push right

# Move Bindings
bind up:f11:toggle              move ${wpx};${wpy}-1 ${wsx};${wsy}
bind down:f11:toggle            move ${wpx};${wpy}+1 ${wsx};${wsy}
bind left:f11:toggle            move ${wpx}-1;${wpy} ${wsx};${wsy}
bind right:f11:toggle           move ${wpx}+1;${wpy} ${wsx};${wsy}
bind up:shift,f11:toggle        move ${wpx};${wpy}-10 ${wsx};${wsy}
bind down:shift,f11:toggle      move ${wpx};${wpy}+10 ${wsx};${wsy}
bind left:shift,f11:toggle      move ${wpx}-10;${wpy} ${wsx};${wsy}
bind right:shift,f11:toggle     move ${wpx}+10;${wpy} ${wsx};${wsy}
bind up:alt,f11:toggle          move ${wpx};${wpy}-100 ${wsx};${wsy}
bind down:alt,f11:toggle        move ${wpx};${wpy}+100 ${wsx};${wsy}
bind left:alt,f11:toggle        move ${wpx}-100;${wpy} ${wsx};${wsy}
bind right:alt,f11:toggle       move ${wpx}+100;${wpy} ${wsx};${wsy}

bind up:cmd,f11:toggle          move ${wpx};${soy} ${wsx};${wsy}
bind down:cmd,f11:toggle        move ${wpx};${soy}+${ssy}-${wsy} ${wsx};${wsy}
bind left:cmd,f11:toggle        move ${sox};${wpy} ${wsx};${wsy}
bind right:cmd,f11:toggle       move ${sox}+${ssx}-${wsx};${wpy} ${wsx};${wsy}

# Window Hints
bind esc:cmd hint