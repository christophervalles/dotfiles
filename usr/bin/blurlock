#!/bin/bash
# /usr/bin/blurlock

# take screenshot
#import -window root /tmp/screenshot.png

# blur it
#convert /tmp/screenshot.png -blur 0x5 /tmp/screenshotblur.png
#rm /tmp/screenshot.png

# lock the screen
i3lock -k --datestr="%a %Y-%m-%d" -c 000000 -B 5 --timecolor=000000ff --datecolor=000000ff --layoutcolor=ffffffff --insidecolor=aaaaaa6c --ringcolor=0000003e --linecolor=00000000 --keyhlcolor=ffffff80 --ringvercolor=00ff0055 --separatorcolor=22222260 --insidevercolor=aaaaaa6c --ringwrongcolor=ff000055 --insidewrongcolor=aaaaaa6c

exit 0
